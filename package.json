{
  "name": "creative-hands",
  "version": "1.0.0",
  "description": "Portal de productos artesanales con autenticación y chat en tiempo real",
  "main": "server/server.ts",
  "scripts": {
    "server": "nodemon server/server.ts",
    "client": "cd client && pnpm run dev",
    "dev": "concurrently \"pnpm run server\" \"pnpm run client\"",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md,html}\"",
    "test": "jest --runInBand",
    "start": "node dist/server/server.js",
    "build:server": "tsc -p tsconfig.build.json",
    "postinstall": "npm run build:server",
    "build": "cd client && pnpm run build"
  },
  "keywords": [
    "artesanía",
    "ecommerce",
    "chat",
    "socket.io",
    "jwt"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cookie": "^1.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.0",
    "bcryptjs": "^3.0.3",
    "cloudinary": "^1.41.3",
    "cookie": "^1.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^8.0.0",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "socket.io": "^4.6.0",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "concurrently": "^9.2.1",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^8.12.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.7.4",
    "supertest": "^7.0.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "unrs-resolver"
    ]
  }
}